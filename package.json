{
	"name": "@diegofrayo/bets",
	"version": "1.0.0",
	"private": true,
	"author": "@diegofrayo",
	"license": "ISC",
	"scripts": {
		"===== BUILD =====": "",
		"prepare": "husky",
		"===== LINTING & FORMATTING =====": "",
		"lint": "eslint --ignore-path .gitignore --ext .ts --ext .js --fix ./src/scripts/predictions",
		"lint:no-warnings": "cross-env NO_LINT_WARNINGS=true && npm run lint",
		"format": "prettier --write \"./src/**/*.ts\" \"./src/scripts/predictions/data/raw/leagues.json\"",
		"format:minify": "minify-all-js src/scripts/predictions/data/raw -j && minify-all-js src/scripts/predictions/data/output/standings -j && minify-all-js src/scripts/predictions/data/output/teams -j",
		"===== MAIN =====": "",
		"script:browser-extension": "ts-node src/scripts/browser-extension/index.ts",
		"script:browser-extension:bundler": "node ./src/scripts/browser-extension/config/esbuild.mjs",
		"script:browser-extension:bundler:watch": "node --watch ./src/scripts/browser-extension/config/esbuild.mjs",
		"script:predictions": "ts-node src/scripts/predictions/index.ts",
		"===== NOTES =====": "",
		"avoid-type-checking": "ts-node src/scripts/bets/index.ts --transpileOnly"
	},
	"dependencies": {
		"axios": "^1.6.8",
		"country-emoji": "^1.5.6",
		"dayjs": "^1.11.11",
		"dotenv": "^16.4.5",
		"js-convert-case": "^4.2.0",
		"jsdom": "^24.0.0",
		"prettier": "^3.2.5",
		"type-fest": "^4.23.0"
	},
	"devDependencies": {
		"@types/jsdom": "^21.1.6",
		"@types/node": "^20.5.6",
		"esbuild": "^0.20.1",
		"esbuild-plugin-tsc": "^0.4.0",
		"minify-all-js": "^0.1.9",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	},
	"optionalDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^6.4.0",
		"eslint": "^8.47.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.1.0",
		"eslint-config-next": "^13.4.19",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-unicorn": "^48.0.1",
		"husky": "^9.1.1"
	}
}
